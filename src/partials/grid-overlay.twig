<div class="print-hide">
<!-- do not include in production -->
<style>
  @print {
    [class*='debug-grid'] {
      display: none !important;
    }
  }

  .debug-grid-center {
    display: block;
    position: fixed;
    z-index: 9999999;
    border-bottom: 1px dashed red;
    height: 1px;
    width: 100%;
    top: 50%;
    left: 0;
  }

  .debug-grid-overlay-label {
    position: fixed;
    bottom: 0;
    left: 0;
    background: red;
    color: white;
    padding:1em;
    z-index: 99999;
    cursor: pointer;
    opacity: .2;
  }

  .debug-grid-overlay-label:hover {
    opacity:1;
  }

  .debug-grid-overlay-input {
    visibility: hidden;
  }

  .debug-grid-overlay-input:checked ~ .debug-grid-overlay {
    display: block;
  }

  .debug-grid-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 99999;
  }

  .debug-grid-overlay .row > div {
    height: 100vh;
    outline: 1px solid red;
  }

  .debug-grid-overlay span {
    display: inline-block;
    background: red;
    height: 100%;
    width: 100%;
    opacity: .2;
  }
</style>

<label for="debug-grid-overlay-input" class="debug-grid-overlay-label">Toggle Grid</label>
<input type="checkbox" class="debug-grid-overlay-input" id="debug-grid-overlay-input">

<div class="debug-grid-overlay">
  <div class="debug-grid-center"></div>
  <div class="container">
    <div class="row">
      {% for i in 1..12 %}
        <div class="col-1"><span>&nbsp;</span></div>
      {% endfor %}
    </div>
  </div>
</div>

</div>
