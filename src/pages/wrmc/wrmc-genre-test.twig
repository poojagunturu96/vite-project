{% extends "layouts/wrmc-layout.twig" %}

{% set has_page_image = true %}

{% set page_header = {
  title: 'Genres',
  breadcrumb: [
    {
      text: 'Home'
    }
  ],
  image_src: has_page_image,
  weekly_top_ten: true
} %}

{% block content %}
  <div class="show-details">
    <div class="show-details__genres" style="flex-direction:column">
      {% for genre in all_genres %}
        <a href="#" class="show-details__genre ml-0 my-2 {{genre.class}}">{{genre.name}}</a>
      {% endfor %}
    </div>
  </div>
{% endblock %}
