{% extends 'layouts/course-hub-layout.twig' %}

{% set body_class = 'roster-page' %}

{% set page_header = {
  title: 'Roster for AMST 0210A',
  breadcrumb: [
    {
      text: 'Course Hub'
    },
    {
      text: 'Schools and Programs'
    },
    {
      text: 'Middlebury College'
    },
    {
      text: 'Spring 2019'
    },
    {
      text: 'American Studies'
    },
    {
      text: 'AMST 0210A: Mod. American Cult. 1830-1919'
    }
  ]
} %}

{% block nav %}
  <div class="print-hide">
    {% include 'partials/page-nav.twig' with {
      label: 'My Terms',
      items: [
        {
          text: 'Fall 2019'
        },
        {
          text: 'Fall 2019'
        },
        {
          text: 'Fall 2019'
        },
