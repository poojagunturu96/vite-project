                <option value="154">Boston University</option>
                <option value="225">Central Saint Martins College of Art and Design</option>
                <option value="206">Centre Madeleine</option>
                <option value="178">Ecole Spéciale d'Architecture</option>
                <option value="180">Freie Universitat Berlin</option>
              </select>
            </div>
            <div class="form-group">
              <label class="label" for="edit-field-city-target-id">City</label>
              <select class="form-control" data-drupal-selector="edit-field-city-target-id" name="field_city_target_id[]" id="edit-field-city-target-id" data-once="chosenBef chosen" tabindex="-1">
