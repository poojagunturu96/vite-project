            </div>
            <div class="form-group">
              <label class="label" for="edit-field-country-target-id">Country</label>
              <select class="form-control" data-drupal-selector="edit-field-country-target-id" name="field_country_target_id[]" id="edit-field-country-target-id" data-once="chosenBef chosen" tabindex="-1">
                <option value="328">Argentina</option>
                <option value="322">Australia</option>
                <option value="661">Bhutan</option>
                <option value="363">Botswana</option>
                <option value="339">Brazil</option>
              </select>
            </div>
            <input data-drupal-selector="edit-submit-courses" type="submit" id="edit-submit-courses" value="Apply" class="button button--primary js-form-submit">
          </form>
        </div>
      </div>
    {% endblock %}
  {% endembed %}
{% endblock %}
