                <option value="501">Anthropology</option>
                <option value="504">Arabic</option>
                <option value="436">Biochemistry</option>
                <option value="458">Biology</option>
              </select>
            </div>
            <div class="form-group">
              <label class="label" for="edit-field-approving-department-target-id">Approving Department</label>
              <select class="form-control" data-drupal-selector="edit-field-approving-department-target-id" name="field_approving_department_target_id[]" id="edit-field-approving-department-target-id" data-once="chosenBef chosen" tabindex="-1">
                <option value="408">AMST</option>
                <option value="582">ANTH</option>
                <option value="585">ARBC</option>
                <option value="386">ART</option>
                <option value="406">BIOL</option>
              </select>
            </div>
            <div class="form-group">
              <label class="label" for="edit-field-stand-alone-minor-target-id">Stand-Alone Minor</label>
              <select class="form-control" data-drupal-selector="edit-field-stand-alone-minor-target-id" name="field_stand_alone_minor_target_id[]" id="edit-field-stand-alone-minor-target-id" data-once="chosenBef chosen" tabindex="-1">
                <option value="576">African American Studies</option>
                <option value="579">Environmental Studies</option>
                <option value="573">Food Studies</option>
                <option value="473">Global Health</option>
                <option value="475">Linguistics</option>
                <option value="474">Portuguese</option>
              </select>
            </div>
            <div class="form-group">
              <label class="label" for="edit-field-academic-distribution-target-id">Academic Distribution</label>
              <select class="form-control" data-drupal-selector="edit-field-academic-distribution-target-id" name="field_academic_distribution_target_id[]" id="edit-field-academic-distribution-target-id" data-once="chosenBef chosen" tabindex="-1">
                <option value="414">ART</option>
                <option value="420">DED</option>
                <option value="413">HIS</option>
                <option value="418">LIT</option>
                <option value="419">LNG</option>
                <option value="417">PHL</option>
                <option value="416">SCI</option>
                <option value="415">SOC</option>
              </select>
            </div>
            <div class="form-group">
              <label class="label" for="edit-field-cultures-civilization-target-id">Cultures &amp; Civilizations</label>
              <select class="form-control" data-drupal-selector="edit-field-cultures-civilization-target-id" name="field_cultures_civilization_target_id[]" id="edit-field-cultures-civilization-target-id" data-once="chosenBef chosen" tabindex="-1">
                <option value="373">AAL</option>
                <option value="609">AMR</option>
                <option value="371">CMP</option>
                <option value="370">EUR</option>
                <option value="612">MDE</option>
                <option value="603">NOA</option>
                <option value="372">NOR</option>
                <option value="606">SAF</option>
                <option value="374">SOA</option>
              </select>
            </div>
            <div class="form-group">
              <label class="label" for="edit-field-host-university-target-id">Host University</label>
              <select class="form-control" data-drupal-selector="edit-field-host-university-target-id" name="field_host_university_target_id[]" id="edit-field-host-university-target-id" data-once="chosenBef chosen" tabindex="-1">
