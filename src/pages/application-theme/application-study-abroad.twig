{% extends "layouts/application-layout.twig" %}

{% set app_layout_full_width = false %}
{% set app_title = 'Middlebury Study Abroad Courses' %}
{% set app_menu_items = [] %}

{% set page_header = {
  title: 'New Search',
  breadcrumb: [
    { text: 'Middlebury' },
    { text: 'Middlebury Study Abroad Courses' }
  ],
} %}

{% block page %}
  {% embed 'partials/sidebar-layout.twig' %}
    {% block nav %}
      {% include 'partials/page-nav.twig' with {
        label: 'Course Information Database',
        items: [
          {
            text: 'New Search',
            href: '#',
            active: true
          }
        ]
      } %}
    {% endblock %}
    {% block content %}
      <div class="paragraphs">
        <div class="paragraph--text typography">
          <div data-drupal-messages-fallback="" class="hidden"></div>
          <p>*Apply Search Criteria button is&nbsp;below</p>


          <form action="/study-abroad-courses/search-results" method="get" id="views-exposed-form-courses-study-abroad-courses" accept-charset="UTF-8">
            <div class="form-group">
              <label class="label" for="edit-field-major-minor-target-id">Major/Minor</label>
              <select class="form-control" data-drupal-selector="edit-field-major-minor-target-id" name="field_major_minor_target_id[]" id="edit-field-major-minor-target-id" tabindex="-1">
