  {% include 'paragraphs/waveform.twig' with {
    lines: true
  } %}

  {% include 'paragraphs/quad-story.twig' %}

  {% include 'paragraphs/themed-panel.twig' with {
    main_title: true,
    main_article: true,
    main_article_cta: true,
    main_article_title_link: false,
    subarticles: 3,
  }%}
{% endblock %}

{% block layout_footer %}
	{% include 'partials/olark.twig' %}
	{% include 'partials/footer-cta-group.twig' %}
	{% include 'partials/school-footer.twig' with {
    name: 'Support the Institute',
    cta: {
      text: 'Make a Gift',
      link: 'https://engage.middlebury.edu/pages/give-to-miis?sid=1637&gid=3&pgid=496&cid=1248&_ga=2.201331473.105684710.1518198910-149004332.1477001419'
