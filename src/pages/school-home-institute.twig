{% extends 'layouts/school-home.twig' %}

{% set theme = 'institute' %}
{% set is_front = true %}

{% block layout_header %}
  {% embed 'partials/school-header.twig' %}
    {% block school_logo %}
      <img src="images/miis-logo.svg" srcset="images/miis-logo.svg 361w" sizes="(min-width: 1280px) 361px, 248px" alt="Logo for Middlebury Institute of International Studies at Monterey"/>
      <span class="sr-only">
        Middlebury Institute of International Studies at Monterey
      </span>
    {% endblock %}
  {% endembed %}
{% endblock %}

{% block content %}
  {% include 'paragraphs/mega-cta.twig' with {
    pin: 'left-bottom',
    miis: 'true',
    gradient: 'left-top',
    image: 'miis_spotlight',
    caption: 'Lorem ipsum dolor sit amet consectetur adipisicing elit.',
    title_link: 'Water Sanitation Research and Development, India',
    text: 'Access to safe water and adequate sanitation services has proven to be one of the most efficient ways of improving human health.',
    link: 'Read more'
  } %}

  {% include 'paragraphs/degree-finder.twig' %}

  {% include 'paragraphs/text-short.twig' %}

  {% include 'paragraphs/pardot-form.twig' with {
    title: 'Find out if IEM is right for you',
    post_url: 'https://learn.middlebury.edu/l/74172/2021-08-04/21x2y5y',
    program: 'International Education Management',
    confirmation: 'http://www.middlebury.edu',
    button: 'Get Info'
  } %}

  {% include 'paragraphs/text-short.twig' %}

  {% include 'paragraphs/card-carousel.twig' %}

  {% include 'paragraphs/dispatches.twig' %}

  {% include 'paragraphs/spotlight.twig' %}

  {% include 'paragraphs/chart-group.twig' with {
    title: 'Internships',
    text: 'Lorem, ipsum dolor sit amet consectetur adipisicing elit. Eveniet, sunt sit impedit aliquid eum vero officiis saepe natus veritatis, ullam quaerat similique quasi molestias numquam voluptate quam incidunt, provident fugiat?',
    items: [
      { type: 'stats', number: 90, label: 'on-campus info sessions with employers', },
      { type: 'stats', number: 500, label: 'on-campus interviews' },
