      { type: 'stats', number: 7500, suffix: '+', label: 'Alumni Career volunteers', },
    ]
  } %}

  {% include 'paragraphs/logo-bar.twig' %}

  {% include 'paragraphs/card-carousel.twig' %}

  {% include 'paragraphs/faq.twig' %}

  {% include 'paragraphs/course-list.twig' with {
      course_title: 'Course List'
    } 
