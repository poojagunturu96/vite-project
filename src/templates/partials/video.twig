{% set id = random(1234) %}
<!-- video iframe html should be escaped -->
<figure class="video{{grid_video ? " landscape-video--grid js-expand-video" : " js-video"}}" data-video='<iframe src="https://player.vimeo.com/video/221201240?autoplay=1" width="400" height="225" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen allow="autoplay"></iframe>'>
  <div class="video__content js-video-content">
    <a href="https://player.vimeo.com/video/221201240" class="js-video-link video__link" role="button" aria-label="Play video" aria-describedby="midd-video-label-{{id}}">
      {% include 'img.twig' with { name: 'video', lazy: lazy } %}
      <span class="button {{grid_video ? " button--light" : " button--primary"}} video__button">
        Play
        <span class="ml-3">
          {% include 'icon.twig' with {
            name: 'play'
          } %}
        </span>
      </span>
    </a>
  </div>
  <figcaption class="{{grid_caption_offset ? "offset-lg-1" : ""}} {{grid_video ? "grid-" : ""}}video__body">
    <h3 class={{grid_video ? "sr-only" : "video__title"}}{% if not hide_title_label %} id="midd-video-label-{{id}}"{% endif %}>Practical Skills for Positive Change</h3>
    <p class="video__text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque viverra aliquet lacus a tristique.
      <a href="">Suspendisse commodo</a>
      pulvinar nisi vel laoreet. Pellentesque id hendrerit velit, vitae consectetur libero.</p>
    {% include 'transcript.twig' with { id: id, class: 'grid-video__transcript' } %}
  </figcaption>
</figure>
