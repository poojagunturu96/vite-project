<div class="col-sm-{{width}}">
  <div class="footer-menu">
    {% if title is not empty %}
      <h3 class="footer-menu__title">{{title}}</h3>
    {% endif %}
    <ul class="footer-menu__list {{cols ? 'footer-menu__list--cols' : ''}}{{four_cols ? 'footer-menu__list--four-cols' : ''}}">
      {% for item in items %}
        <li class="footer-menu__item"><a href="{{item.url}}" class="footer-menu__link">{{item.text}}</a></li>
      {% endfor %}
    </ul>
  </div>
</div>
